<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nu.hci.codemenao.ConnectingNaoActivity"
    android:orientation="vertical"
    android:id="@+id/back"
    android:background="@drawable/nao1"
    >

    <TextView
        android:id="@+id/ip"
        android:text="Ваш IP адрес:"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/serverIp"
        android:text="ip"
        android:textSize="30dp"
        android:textColor="#FF7400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/startGameBtn" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:textSize="20dp"
        android:id="@+id/textView"
        android:text="@string/ip"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/serverIp"
        android:layout_alignParentEnd="true" />

    <Button android:id="@+id/startGameBtn"
        style="@style/lets_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_game"
        android:textSize="25dp"
        android:layout_gravity="right"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
