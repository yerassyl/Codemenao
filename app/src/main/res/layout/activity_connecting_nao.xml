<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nu.hci.codemenao.ConnectingNaoActivity"
    android:orientation="vertical"
    android:id="@+id/back"
    android:background="@drawable/nao1"
    >

    <TextView
        android:id="@+id/ip"
        android:text="Ваш IP адрес:"
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="right"
        android:layout_marginRight="215dp"
        android:layout_marginEnd="215dp"
        android:layout_above="@+id/textView"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <TextView
        android:id="@+id/serverIp"
        android:text="ip"
        android:textSize="50sp"
        android:textColor="#FF7400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="end"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/startGameBtn"
        android:layout_alignRight="@+id/startGameBtn"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:id="@+id/textView"
        android:text="@string/ip"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/serverIp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/waitTxt"
        android:layout_alignStart="@+id/waitTxt" />

    <TextView android:id="@+id/waitTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wait_please"
        android:textSize="40sp"
        android:visibility="visible"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button android:id="@+id/startGameBtn"
        style="@style/lets_go"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/start_game"
        android:textSize="35sp"
        android:layout_gravity="right"
        android:visibility="invisible"
        android:layout_below="@+id/waitTxt"
        android:layout_alignRight="@+id/waitTxt"
        android:layout_alignEnd="@+id/waitTxt" />

</RelativeLayout>
